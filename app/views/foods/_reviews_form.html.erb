<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9">
    <h4 class="m-bottom5"><strong>レビューを追加</strong></h4>
</div>
<%= form_for(:review, url: reviews_path) do |f| %>
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9 p-0">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="form-group">
                <%= f.hidden_field :point, :value => nil, id: 'rating-review' %>
                <%= f.text_area(:content, size: "50x5", :required => true, placeholder: "あなたのレビューを入力してください...", class: 'form-control bg-info b-r-0' ) %>
            </div>
        </div>
    </div>
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9 p-0">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <%= f.hidden_field :user_id, :value => current_user.id %>
            <%= f.hidden_field :food_id, :value => food.id %>
            <%= f.submit " レビュー -->", class: "btn-success btn" %>
        </div>
    </div>
<% end %>
