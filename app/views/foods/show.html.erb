<% provide(:title, @food.name + ' store') %>
<section class="relative fix gray-bg">
    <div class="container">
        <div class="space-30"></div>
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
                <h2 class="text-primary"><%= @food.name %></h2>
                <div class="space-10"></div>
                <div class="title-bar blue">

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-md-6">

                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                  <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>

                  <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <% if (@food.food_pictures.length !=0) %>
                            <% @food.food_pictures.each_with_index do |picture, index| %>
                                <% if index == 0 %>
                                    <div class="item active">
                                        <%= image_tag picture.picture.url, class: 'food-image-detail' %>
                                    </div>
                                <% else %>
                                    <div class="item">
                                        <%= image_tag picture.picture.url, class: 'food-image-detail' %>
                                    </div>
                                <% end %>
                            <% end %>
                        <% else %>
                            <div class="item active">
                                <img src="/assets/default-food.png" class="food-cover" class= 'food-image-detail'>
                            </div>
                            <div class="item">
                                <img src="/assets/default-food.png" class="food-cover" class= 'food-image-detail'>
                            </div>
                        <% end %>
                    </div>
                </div>

                  <!-- Left and right controls -->
                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>

            </div>
            <div class="col-xs-12 pull-right col-md-6 padding60 wow fadeInRight">
                <div class="book-content">
                    <div class="book-details-item">
                        <h4 class="text-success">食べ物の名前: </h4>
                        <p class="lead text-primary"><%= @food.name %></p>
                        <h4 class="tip-left">価格: <span class="price"><%= @food.price %>円</span></h4>
                        <h4 class="">レストラン: <span class="lead text-primary"><%= @food.store.name %></span></h4>
                        <h4 class="">説明: </h4>
                        <h5 class="lead text-primary"><%= @food.description %></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="relative">
    <div class="container">
        <div class="row event-list">
            <% if (@food.reviews.length > 0) %>
                <% @food.reviews.each do |review| %>
                <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9">
                    <div class="event-item wow fadeInRight">
                        <h4 class="show tip-left"><%= review.created_at %></h4>
                        <div class="well padding5 owner-clear">
                            <div class="media">
                                <div class="media-left">
                                    <% if (review.user.avatar?) %>
                                    <a href="/users/<%= review.user.id %>">
                                        <img src="<%= review.user.avatar %>" class="media-object w-70-h-70" alt="library">
                                    </a>
                                    <%  else %>
                                        <a href="/users/<%= review.user.id %>">
                                            <%= image_tag review.user.avatar.default_url("avatar_default.jpg"), class: "media-object w-70-h-70"%>
                                        </a>
                                    <% end %>
                                </div>
                                <div class="media-body">
                                    <a href="/users/<%= review.user.id %>">
                                        <h4 class="media-heading list-inline list-unstyled rating-star">
                                            <%= review.user.name %>
                                            <% for i in 0..review.point-1     %>
                                            <li class="active"><i class="fa fa-star"></i></li>
                                            <% end %>
                                        </h4>
                                    </a>
                                    <p><%= review.content %></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% end %>
            <% end %>
        </div>
        <div class="row ">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9">
                <h4 class="m-bottom5"><strong>レビューを追加</strong></h4>
            </div>
            <form action="" id="form-review" method="post">
                <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9 p-0">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group">
                            <input id="rating-book" name="star" class="rating" data-min="0" data-max="5" data-step="1" data-size="xs">
                            <textarea name="content" id="content" class="form-control bg-info b-r-0" cols="50" rows="5" placeholder="Enter your review..." required></textarea>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-9 p-0">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <button type="submit" class="btn btn-primary hover-btn-default m-0 b-r-0"> レビュー <i class="fa fa-long-arrow-right"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

