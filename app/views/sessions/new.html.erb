<div id="login-box">
	<div class="left-block">
		<h1>サインイン</h1>
		<%= form_for(:session, url: login_path) do |f| %>
			<%= f.email_field :email, placeholder: "harry@gmail.com", class: "form-control" %>

			<%= f.password_field :password, placeholder: "パスワード", class: "form-control" %>

			<% if @error != "" %>
				<p class="error-messages"><%= @error %></p>
			<% end %>

			<%= f.check_box :remember_me, class: "filled-in" %>
			<%= f.label :remember_me, "ログイン状態を保持する" %>

			<%= f.submit "サインイン" %>
		<% end %>
		<br><br>
		<p>新しい利用者? <%= link_to "サインアップ", signup_path %></p>
		<%= link_to "(パスワードをお忘れですか)", new_password_reset_path %>
	</div>
	<div class="right-block">

	</div>

</div>
