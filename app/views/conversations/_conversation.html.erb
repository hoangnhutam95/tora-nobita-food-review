<div id="conversation_<%=conversation.id%>" class="row">	
	<div class="panel panel-primary">
	  <div class="panel-heading">
	  	<%=receiver.name%>
	  </div>
	  <div class="panel-body">
	  	<% conversation.messages.each do |mess|%>
	  		<%if mess.user==sender%>
	  			<div style="border: solid blue"><%=simple_format(mess.body)%></div>
	  		<%else%>
	  			<div style="border: solid red"><%=simple_format(mess.body)%></div>
	  		<%end%>
	  	<% end %>
	  </div>
	  <div class="panel-footer">
	  	<%=form_for Message.new,remote: true do |f|%>	  		
	  		<%=f.hidden_field :user_id,value: sender.id%>
	  		<%=f.hidden_field :conversation_id,value: conversation.id%>
	  		<%=f.text_area :body%>
	  		<%=f.submit 'Send'%>
	  	<%end%>
	  </div>
	</div>
</div>
